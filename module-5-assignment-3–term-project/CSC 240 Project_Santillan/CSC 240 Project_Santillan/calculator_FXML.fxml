                        <Font name="Calibri" size="32.0" />
                    </font>
                </Button>
             <Button id="operatorButton" alignment="CENTER" mnemonicParsing="false" onAction="#operateButton" prefHeight="100.0" prefWidth="100.0" styleClass="operatorButton" text="/" textOverrun="CLIP">
                 <font>
                     <Font name="Microsoft JhengHei Light" size="32.0" />
                 </font>
             </Button>
            </children>
            <padding>
                <Insets left="4.0" right="4.0" />
            </padding>
        </HBox>
        
      <!-- FXML for buttons: 4 5 6 X -->
      <HBox layoutY="80.0" prefHeight="100.0" prefWidth="400.0" spacing="4.0" stylesheets="@calculator_Style.css" AnchorPane.topAnchor="300.0">
         <children>
             <Button id="numberButton" alignment="CENTER" mnemonicParsing="false" onAction="#operateButton" prefHeight="100.0" prefWidth="100.0" styleClass="numberButton" text="4" textOverrun="CLIP">
