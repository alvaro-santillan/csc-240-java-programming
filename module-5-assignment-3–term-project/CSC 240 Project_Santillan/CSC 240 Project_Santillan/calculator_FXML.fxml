      </TextField>

      <!-- FXML for buttons: C = -->
      <HBox layoutY="52.0" prefHeight="100.0" prefWidth="400.0" spacing="4.0" style="-fx-background-color: ;" stylesheets="@calculator_Style.css" AnchorPane.topAnchor="100.0">
          <children>
             <Button id="darkButton" alignment="CENTER" mnemonicParsing="false" onAction="#operateButton" prefHeight="92.0" prefWidth="298.0" styleClass="operatorButton" text="C">
                 <font>
                     <Font name="Microsoft JhengHei Light" size="32.0" />
                 </font></Button>
            <Button id="darkButton" alignment="CENTER" mnemonicParsing="false" onAction="#operateButton" prefHeight="100.0" prefWidth="100.0" styleClass="darkButton" text="=" textOverrun="CLIP">
               <font>
                  <Font size="32.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
      </HBox>


        <!-- FXML for buttons: 7 8 9 / -->
        <HBox layoutY="200.0" prefHeight="100.0" prefWidth="400.0" spacing="4.0" stylesheets="@calculator_Style.css" AnchorPane.topAnchor="200.0">
            <children>
                <Button id="numberButton" alignment="CENTER" mnemonicParsing="false" onAction="#operateButton" prefHeight="100.0" prefWidth="100.0" styleClass="numberButton" text="7" textOverrun="CLIP">
                    <font>
                        <Font name="Calibri" size="32.0" />
                    </font>
                </Button>
                <Button id="numberButton" alignment="CENTER" mnemonicParsing="false" onAction="#operateButton" prefHeight="100.0" prefWidth="100.0" styleClass="numberButton" text="8" textOverrun="CLIP">
