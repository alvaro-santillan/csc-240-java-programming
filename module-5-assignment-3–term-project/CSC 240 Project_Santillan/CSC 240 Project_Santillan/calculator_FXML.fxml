      <HBox layoutX="10.0" layoutY="210.0" prefHeight="100.0" prefWidth="400.0" spacing="4.0" stylesheets="@calculator_Style.css" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="500.0">
         <children>
            <Button id="numberButton" alignment="CENTER" mnemonicParsing="false" onAction="#operateButton" prefHeight="100.0" prefWidth="298.0" styleClass="numberButton" text="0" textOverrun="CLIP">
               <font>
                  <Font name="Calibri" size="32.0" />
               </font>
            </Button>
             <Button id="operatorButton" alignment="CENTER" mnemonicParsing="false" onAction="#operateButton" prefHeight="100.0" prefWidth="100.0" styleClass="numberButton" text="+" textOverrun="CLIP">
