                        <Font name="Calibri" size="32.0" />
                    </font>
                </Button>
                <Button id="numberButton" alignment="CENTER" mnemonicParsing="false" onAction="#operateButton" prefHeight="100.0" prefWidth="100.0" styleClass="numberButton" text="9" textOverrun="CLIP">
