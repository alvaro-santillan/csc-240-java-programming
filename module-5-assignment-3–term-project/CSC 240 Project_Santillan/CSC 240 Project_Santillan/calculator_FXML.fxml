                <Button id="operatorButton" alignment="CENTER" mnemonicParsing="false" onAction="#operateButton" prefHeight="100.0" prefWidth="100.0" styleClass="numberButton" text="x" textOverrun="CLIP">
                    <font>
                        <Font name="Microsoft JhengHei Light" size="32.0" />
                    </font>
                </Button>
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
      </HBox>

      <!-- FXML for buttons: 1 2 3 - -->
      <HBox layoutY="120.0" prefHeight="100.0" prefWidth="400.0" spacing="4.0" stylesheets="@calculator_Style.css" AnchorPane.topAnchor="400.0">
         <children>
             <Button id="numberButton" alignment="CENTER" mnemonicParsing="false" onAction="#operateButton" prefHeight="100.0" prefWidth="100.0" styleClass="numberButton" text="1" textOverrun="CLIP">
                 <font>
                     <Font name="Calibri" size="32.0" />
