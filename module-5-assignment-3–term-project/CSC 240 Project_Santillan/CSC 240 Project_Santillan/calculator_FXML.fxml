<AnchorPane prefHeight="600.0" prefWidth="400.0" styleClass="pane" stylesheets="@calculator_Style.css" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="calculator.controller">
    <children>

      <!--FXML for the textfield-->
      <TextField fx:id="display" cacheShape="false" centerShape="false" editable="false" focusTraversable="false" onInputMethodTextChanged="#operateButton" pickOnBounds="false" prefHeight="100.0" prefWidth="400.0" scaleShape="false" styleClass="textField" stylesheets="@calculator_Style.css">
